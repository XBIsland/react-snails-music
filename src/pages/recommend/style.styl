@import '../../common/stylus/variable.styl'

.recommend
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background #fff

  .music-list
    .back
      position absolute
      top 0px
      left 0px
      z-index 50

      .iconfont
        display block
        padding 10px
        font-size 16px
        font-weight 100
        color #ffffff

    .title
      position absolute
      top 0
      left 10%
      z-index 40
      width 80%
      margin 0
      text-overflow ellipsis
      overflow hidden
      white-space nowrap
      text-align left
      line-height 40px
      font-size 18px
      font-weight 300
      color #fff

    .bg-image
      position relative
      width 100%
      height 0
      padding-top 70%
      transform-origin top
      background-size cover
      background-image url('./recommend.jpg')